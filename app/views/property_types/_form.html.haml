= form_for @property_type do |f|
  - if @property_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@property_type.errors.count, "error")} prohibited this property_type from being saved:"
      %ul
        - @property_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
